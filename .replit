modules = ["python-3.11", "c"]

[nix]
channel = "stable-24_05"
packages = ["cmake", "gcc-arm-embedded"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Light Sensor Node Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Light Sensor Simulator"

[[workflows.workflow]]
name = "Light Sensor Node Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export PICO_SDK_PATH=/home/runner/workspace/pico-sdk && cd light_sensor_node && mkdir -p build && cd build && cmake .. && make -j4"

[[workflows.workflow]]
name = "Light Sensor Simulator"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd sim_light_sensor && ./light_sensor_sim"

[deployment]
run = ["sh", "-c", "cd sensor_node && mkdir -p build && cd build && cmake .. && make -j4 && ./sensor_node"]
