modules = ["python-3.11", "c"]

[nix]
channel = "stable-24_05"
packages = ["cmake", "gcc-arm-embedded"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Sensor Node"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Sensor Node Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Zephyr Sensor Node"

[[workflows.workflow]]
name = "Sensor Node"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd sensor_node && mkdir -p build && cd build && cmake .. && make -j4 && ./sensor_node"
waitForPort = 5000

[[workflows.workflow]]
name = "Sensor Node Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export PICO_SDK_PATH=/home/runner/workspace/pico-sdk && cd sensor_node && mkdir -p build && cd build && cmake .. && make -j4"

[[workflows.workflow]]
name = "Zephyr Sensor Node"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd sensor_node_zephyr && west build -b rpi_pico"

[deployment]
run = ["sh", "-c", "cd sensor_node && mkdir -p build && cd build && cmake .. && make -j4 && ./sensor_node"]
